{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Conversation will be created between the selected users.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Enter title of the group chat",
      "isRequired": true,
      "errorMessage": "Title is required"
    },
    {
      "type": "Input.Text",
      "spacing": "Medium",
      "id": "title"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Enter the message",
      "isRequired": true,
      "errorMessage": "Message is required"
    },
    {
      "type": "Input.Text",
      "spacing": "Medium",
      "id": "message"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Select scope"
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [
        {
          "title": "Conversation",
          "value": "CurrentContext"
        },
        {
          "title": "Organization",
          "value": "OrgWide"
        }
      ],
      "isRequired": true,
      "errorMessage": "Choice is required",
      "value": "CurrentContext",
      "id": "choice"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Search user in this conversation"
    },
    {
      "type": "Input.ChoiceSet",
      "choices.data": {
        "type": "Data.Query",
        "dataset": "graph.microsoft.com/users?scope=currentContext"
      },
      "id": "people-picker-current",
      "isMultiSelect": true
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Search user in the organization"
    },
    {
      "type": "Input.ChoiceSet",
      "choices.data": {
        "type": "Data.Query",
        "dataset": "graph.microsoft.com/users"
      },
      "id": "people-picker-org",
      "isMultiSelect": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "userlike"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}