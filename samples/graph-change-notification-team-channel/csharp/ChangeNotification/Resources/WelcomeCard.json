{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Hello and welcome to Teams Channel Notification Bot",
      "$when": "${isWelcomeCard}",
      "size": "medium",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "text": "Your bot installed successfully",
      "wrap": true,
      "color": "good"
    },
    {
      "type": "TextBlock",
      "text": "You will start getting notification for this Teams for every  Create, Edit and Delete of Channel.",
      "wrap": true,
      "color": "accent"
    }
  ]
}