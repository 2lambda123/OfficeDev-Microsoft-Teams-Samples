          ],
          "parameters": [
            {
              "name": "searchQuery",
              "title": "Search",
              "description": "Your search query",
              "inputType": "text"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity"
  ],
  "validDomains": [
    "{TODO: BOT_DOMAIN}"
  ],
  "webApplicationInfo": {
    "id": "{TODO: MicrosoftAppId}",
    "resource": "api://botid-{TODO: MicrosoftAppId}"
