{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{TODO: MicrosoftAppId}",
  "packageName": "com.microsoft.teams.msgExt.search",
  "developer": {
    "name": "TCS",
    "websiteUrl": "https://dev.botframework.com",
    "privacyUrl": "https://dev.botframework.com",
    "termsOfUseUrl": "https://dev.botframework.com"
  },
  "icons": {
    "color": "icon-color.png",
    "outline": "icon-outline.png"
  },
  "name": {
    "short": "EngineeringLessons",
    "full": "Find information for engineering lessons learned"
  },
  "description": {
    "short": "Find information related to engineering lessons learned",
    "full": "This is an AI driven app that can help identify applicable lessons learned withing the engineering lessons learned database. Users can ask the bot to identify lessons based on key words or project descriptions."
  },
  "accentColor": "#FFFFFF",
  "composeExtensions": [
    {
      "botId": "{TODO: MicrosoftAppId}",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "searchQuery",
          "type": "query",
          "title": "Search",
          "description": "Find in lessons learned by providing search string",
          "initialRun": false,
          "fetchTask": false,
          "context": [
            "commandBox",
            "compose",
            "message"
          ],
          "parameters": [
            {
              "name": "searchQuery",
              "title": "Search",
              "description": "Lessons learned",
              "inputType": "text"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity"
  ],
  "validDomains": [
    "{TODO: BOT_DOMAIN}"
  ],
  "webApplicationInfo": {
    "id": "{TODO: MicrosoftAppId}",
    "resource": "api://botid-{TODO: MicrosoftAppId}"
  }
}