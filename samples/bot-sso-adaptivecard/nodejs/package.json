{
    "name": "sso-adaptive-card",
    "version": "1.0.0",
    "description": "Bot SSO Adaptive Card",
    "author": "Microsoft",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "start": "node ./index.js",
        "watch": "nodemon ./index.js",
        "envsetup": "node ./index.js -e",
        "clean": "npm i && npm run envsetup && node ./index.js -c", "//": "Clean out build files",
        "fullclean": "npm i && npm run envsetup && node ./index.js -f",  "//": "Clean out build and cache files",
        "build": "npm run envsetup && node ./index.js",  "//": "Builds the entire project to the build/ directory",
        "distpackage": "npm run fullclean && npm run build && node ./index.js -p",  "//": "Cleans out the build/cache files, rebuilds the project.",
        "lint": "eslint .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/BotBuilder-Samples.git"
    },
    "dependencies": {
        "@microsoft/microsoft-graph-client": "^2.2.1",
        "botbuilder": "^4.19.0",
        "botbuilder-dialogs": "^4.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "eslint": "^7.0.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "nodemon": "~2.0.4"
    }
}
