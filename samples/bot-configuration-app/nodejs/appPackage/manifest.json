{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/devPreview/MicrosoftTeams.schema.json",
  "manifestVersion": "devPreview",
  "version": "1.5",
  "id": "<<YOUR-MICROSOFT-APP-ID>>",
  "packageName": "com.microsoft.teams.botconfigurationapp",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Bot configuration app",
    "full": "Bot configuration app with type ahead search control"
  },
  "description": {
    "short": "Bot configuration app with type ahead search control",
    "full": "This sample shows the feature of configurable card with type ahead search (static and dynamic) control on Adaptive Cards."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "bots": [
    {
      "botId": "<<YOUR-MICROSOFT-APP-ID>>",
      "needsChannelSelector": false,
      "scopes": [
        "team",
        "groupchat"
      ],
      "configuration": {
        "groupChat": {
          "fetchTask": true
        },
        "team": {
          "fetchTask": true
        }
      },
      "commandLists": [
        {
          "scopes": [
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "staticsearch",
              "description": "To get static type ahead search Adaptive Card"
            },
            {
              "title": "dynamicsearch",
              "description": "To get dynamic type ahead search Adaptive Card"
            }
          ]
        }
      ],
      "isNotificationOnly": false
    }
  ],
  "composeExtensions": [
    {
      "botId": "<<YOUR-MICROSOFT-APP-ID>>",
      "commands": [
        {
          "id": "dynamicsearch",
          "type": "action",
          "title": "Dynamic Search",
          "description": "Dynamic Search",
          "fetchTask": true,
          "context": [
            "compose"
          ]
        },
        {
          "id": "searchQuery",
          "type": "query",
          "title": "Search",
          "description": "Perform a search",
          "initialRun": false,
          "fetchTask": false,
          "context": [
            "commandBox",
            "compose",
            "message"
          ],
          "parameters": [
            {
              "name": "searchQuery",
              "title": "Search",
              "description": "Your search query",
              "inputType": "text"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [ "identity", "messageTeamMembers" ],
  "validDomains": [
    "<<domain-name>>"
  ]
}